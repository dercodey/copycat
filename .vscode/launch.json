{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${input:initial}",
                "${input:modified}",
                "${input:target}",
                "--iterations=10"
            ]
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "initial",
            "description": "initial string value",
            "default": "abc"
          },
          {
            "type": "promptString",
            "id": "modified",
            "description": "modified initial value",
            "default": "abd"
          },
          {
            "type": "promptString",
            "id": "target",
            "description": "target string value",
            "default": "ppqqqrrrr"
          }
    ]
}